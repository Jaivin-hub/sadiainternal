<section class="locTitles">
    <div class="container">
        <div class="titleWrap text-center">
            <h2 class="mainTitle">Where to buy</h2>
        </div>
    </div>
</section>



<section class="whereWrapper">
    <div class="container">


        <div class="locationTabs catgSpc">
            <ul class="nav nav-tabs categ_filter" id="locationTab" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link filBtn active" id="all-tab" data-bs-toggle="tab"
                        data-bs-target="#online-tab" type="button" role="tab" aria-controls="online-tab"
                        aria-selected="true">Online</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link filBtn" id="airfryer-tab" data-bs-toggle="tab" data-bs-target="#store-tab"
                        type="button" role="tab" aria-controls="store-tab" aria-selected="false">In Store</button>
                </li>
            </ul>
        </div>
        <div class="tab-content tabWraper" id="locationTab">
            <div class="tab-pane fade show active" id="online-tab" role="tabpanel" aria-labelledby="online-tab"
                tabindex="0">
                {{!-- FILTER-START --}}
                <div class="filterSection postDiv">
                    <div class="dropdown-container">
                        <select class="form-select " id="countryselect" data-url="https://sadialife-dev.azurewebsites.net/Umbraco/api/data/GetOnlineStores">
                            <option value="1287">UAE</option>
                            <option value="1288">Saudi Arabia</option>
                            <option value="1289">Qatar</option>
                            <option value="1290">Kuwait</option>
                            <option value="1291">Oman</option>
                        </select>
                    </div>

                    <!-- Search bar section Start -->
                    <div class="search-bar-container">
                        <form class="d-flex locatSearch">
                            <input id="searchInpts" class="form-control search-bar" type="search" placeholder="Search"
                                aria-label="Search">
                            <button class="btn btn-outline serLoc" type="button">
                                <img src="./assets/images/icons/Search.svg" loading="lazy" alt="Search">
                            </button>
                            <button class="btn btn-outline cl_ser" id="onlinestoreclose" type="button" style="display: none;"><img
                                    src="./assets/images/icons/s_close.svg" loading="lazy" alt="Search"></button>
                            <!-- Close button -->
                        </form>
                    </div>
                    <!-- Search bar section End-->
                </div>
                {{!-- FILTER-END --}}

                <div class="boxDivs buyBoxs" id="OnlineStoreCards">
                    <div class="row shop_logos" id="onlinecontainers">
                        {{!-- {{#each htmlWebpackPlugin.options.data }}
                        {{> ../mustache/online}}
                        {{/each}} --}}
                    </div>
                    <div class="btnSpace text-center">
                        <button data-api="https://sadialife-dev.azurewebsites.net/Umbraco/api/data/GetOnlineStores" data-limit="1" data-offset="0"
                            id="onlineShowMore" class="btn btn-more">Show More</button>
                    </div>
                </div>

            </div>

            <div class="tab-pane fade" id="store-tab" role="tabpanel" aria-labelledby="store-tab" tabindex="0">
                {{!-- FILTER-START --}}
                <div class="filterSection postDiv" id="filterSection">
                    <div class="dropdown-container">
                        <select class="form-select countryDrops" id="countryDrops" data-url="https://sadialife-dev.azurewebsites.net/Umbraco/api/data/GetInStores"
                            id="filterinstore">
                            <option
                                value="1287">UAE</option>
                            <option
                                value="1288">Saudi Arabia</option>
                            <option
                                value="1289">Qatar</option>
                            <option
                                value="1290">Kuwait</option>
                            <option
                                value="1291">Oman</option>
                        </select>
                    </div>

                    <!-- Search bar section Start -->
                    <div class="search-bar-container">
                        <form class="d-flex locatSearch">
                            <input id="inStoreSearchInpts" class="form-control search-bar" type="search" placeholder="Search"
                                aria-label="Search">
                            <button class="btn btn-outline serLoc" type="button">
                                <img src="./assets/images/icons/Search.svg" loading="lazy" alt="Search">
                            </button>
                            <button class="btn btn-outline cl_ser" id="instoreclose" type="button" style="display: none;"><img
                                    src="./assets/images/icons/s_close.svg" loading="lazy" alt="Search"></button>
                            <!-- Close button -->
                        </form>
                    </div>
                    <!-- Search bar section End-->
                </div>
                {{!-- FILTER-END --}}

                <div class="mapWraper">
                    <div id="mapContainer">
                        <div id="wheretobuyMapframe">

                        </div>
                    </div>
                </div>
            </div>
        </div>


    </div>
</section>

